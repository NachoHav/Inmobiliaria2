@model IEnumerable<test.Models.Propietario>

@{
    ViewData["Title"] = "Propietarios";
}

<h1 class="text-center">Propietarios</h1>
<a class="explode-btn" asp-action="Create">
    <i class="fas fa-plus-circle fa-2x"></i>
</a>
<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.IdPropietario)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Dni)</th>
            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.IdPropietario)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                <td>@Html.DisplayFor(modelItem => item.Dni)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                <td class="no-underline">@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    <a class="btn btn-primary btn-sm custom-link"
                        href="@Url.Action("Edit", new { id = item.IdPropietario })">
                        <i class="fas fa-edit fa-2x"></i>
                    </a>

                    <a class="btn btn-info btn-sm custom-link"
                        href="@Url.Action("Details", new { id = item.IdPropietario })">
                        <i class="fas fa-info-circle fa-2x"></i>
                    </a>

                    <a class="btn btn-danger btn-sm custom-link"
                        href="@Url.Action("Delete", new { id = item.IdPropietario })">
                        <i class="fas fa-trash-alt fa-2x"></i>
                    </a>
            </tr>
        }
    </tbody>
</table>
