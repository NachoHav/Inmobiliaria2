@model test.Models.Propiedad

@{
    ViewData["Title"] = "Detalles de Propiedad";
}

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0 text-center">Detalles de la Propiedad</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-4">
                        <label class="fw-bold">ID de la Propiedad</label>
                        <p>@Html.DisplayFor(model => model.IdPropiedad)</p>
                        <hr>
                    </div>

                    <div class="mb-4">
                        <label class="fw-bold">Nombre</label>
                        <p>@Html.DisplayFor(model => model.Nombre)</p>
                        <hr>
                    </div>

                    <div class="mb-4">
                        <label class="fw-bold">Descripción</label>
                        <p>@Html.DisplayFor(model => model.Descripcion)</p>
                        <hr>
                    </div>

                    <div class="mb-4">
                        <label class="fw-bold">Precio</label>
                        <p>$@Html.DisplayFor(model => model.PrecioFormateado)</p>
                        <hr>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-4">
                        <label class="fw-bold">Dirección</label>
                        <p>@Html.DisplayFor(model => model.Direccion)</p>
                        <hr>
                    </div>

                    <div class="mb-4">
                        <label class="fw-bold">Habitaciones</label>
                        <p>@Html.DisplayFor(model => model.Habitaciones)</p>
                        <hr>
                    </div>

                    <div class="mb-4">
                        <label class="fw-bold">Baños</label>
                        <p>@Html.DisplayFor(model => model.Banos)</p>
                        <hr>
                    </div>

                    <div class="mb-4">
                        <label class="fw-bold">Área</label>
                        <p>@Html.DisplayFor(model => model.Area)m<sup>2</sup></p>
                        <hr>
                    </div>

                    <div class="mb-4">
                        <label class="fw-bold">Propietario</label>
                        <p>@($"{Model.Duenio.Nombre} {Model.Duenio.Apellido} (ID: {Model.Duenio.IdPropietario})")</p>
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            @Html.ActionLink("Editar", "Edit", new { id = Model.IdPropiedad }, new { @class = "btn btn-primary mr-2" })
            <a asp-action="Index" class="btn btn-secondary">Volver</a>
        </div>
    </div>
</div>
