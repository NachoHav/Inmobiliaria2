@model test.Models.Propiedad

@{
    ViewData["Title"] = "Edit";
    var listaPropietarios = (IList<Propietario>)ViewBag.Propietarios;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Edit" class="card shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Editar Propiedad</h4>
                </div>

                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control custom-input" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Descripcion" class="form-label"></label>
                        <input asp-for="Descripcion" class="form-control custom-input" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PrecioFormateado" class="form-label"></label>
                        <input asp-for="PrecioFormateado" class="form-control custom-input"/>
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Direccion" class="form-label"></label>
                        <input asp-for="Direccion" class="form-control custom-input" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Habitaciones" class="form-label"></label>
                        <input asp-for="Habitaciones" class="form-control custom-input" />
                        <span asp-validation-for="Habitaciones" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Banos" class="form-label"></label>
                        <input asp-for="Banos" class="form-control custom-input" />
                        <span asp-validation-for="Banos" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Area" class="form-label"></label>
                        <input asp-for="Area" class="form-control custom-input" />
                        <span asp-validation-for="Area" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="fPropietarioId" class="form-label">Due√±o</label>
                         <select class="form-select" name="PropietarioId">
                    @foreach (var item in listaPropietarios)
                    {
                        @:<option @(item.IdPropietario==Model.PropietarioId ? "selected" : "") value="@item.IdPropietario">@(item.Nombre + " " + item.Apellido + " - ID: " + item.IdPropietario)</option>
                    }
                </select>


                    </div>
                </div>


                <div class="card-footer text-center">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>