@model test.Models.Contrato

@{
    ViewData["Title"] = "Eliminar contrato";
}

<h3 class="text-center">¿Estás seguro de que deseas eliminar?</h3>
<hr>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">Eliminar Contrato</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 text-end">N° Contrato</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdContrato)</dd>

                        <dt class="col-sm-4 text-end">Inicio</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaInicioFormato)</dd>

                        <dt class="col-sm-4 text-end">Fin</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaFinFormato)</dd>

                        <dt class="col-sm-4 text-end">Propietario</dt>
                        <dd class="col-sm-8">@($"{Model.Propiedad.Nombre} (ID: {Model.PropiedadId})")</dd>

                        <dt class="col-sm-4 text-end">Inquilino</dt>
                        <dd class="col-sm-8">@($"{Model.Inquilino.Nombre} {Model.Inquilino.Apellido} (ID: {Model.InquilinoId})")</dd>
                    </dl>

                    <div class="text-center mt-4">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="IdContrato" />
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                            <a asp-action="Index" class="btn btn-secondary">Volver</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>