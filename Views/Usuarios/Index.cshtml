@model IEnumerable<test.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<h1 class="text-center">Usuarios</h1>

<div class="text-right">
    <a class="btn btn-primary" asp-action="Create">Crear Usuario</a>
</div>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>@Html.DisplayNameFor(model => model.IdUsuario)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Avatar)</th>
            <th>@Html.DisplayNameFor(model => model.Rol)</th>
            <th>@Html.DisplayNameFor(model => model.RolNombre)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.IdUsuario)</td>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    <img src="@item.Avatar" alt="Avatar" width="50" class="img-thumbnail" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.Rol)</td>
                <td>@Html.DisplayFor(modelItem => item.RolNombre)</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdUsuario">Editar</a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdUsuario">Detalles</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdUsuario">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
