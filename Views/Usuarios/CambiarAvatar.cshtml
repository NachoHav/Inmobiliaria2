@model test.Models.Usuario

@{
    ViewData["Title"] = "Cambiar Avatar";
}

<h4>Cambiar Avatar</h4>
<hr />

<form asp-action="CambiarAvatar" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Avatar" class="control-label">Seleccionar nueva imagen de avatar:</label>
        <input type="file" id="avatar" name="avatar" accept="image/*" />
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
        <a asp-action="Perfil" class="btn btn-secondary">Cancelar</a>
    </div>
</form>