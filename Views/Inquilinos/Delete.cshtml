@model test.Models.Inquilino

@{
    ViewData["Title"] = "Eliminar Inquilino";
}

<h3 class="text-center">¿Estás seguro de que deseas eliminar?</h3>
<hr>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h4 class="mb-0">Eliminar Inquilino</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4 text-end">ID del Propietario</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdInquilino)</dd>

                        <dt class="col-sm-4 text-end">Nombre</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4 text-end">Apellido</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido)</dd>

                        <dt class="col-sm-4 text-end">DNI</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Dni)</dd>

                        <dt class="col-sm-4 text-end">Teléfono</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefono)</dd>

                        <dt class="col-sm-4 text-end">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                    </dl>

                    <div class="text-center mt-4">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="IdInquilino" />
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                            <a asp-action="Index" class="btn btn-secondary">Volver</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
